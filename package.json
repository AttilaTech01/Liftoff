{
  "name": "liftoff",
  "author": "Dominic Hains",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "yarn stop && concurrently \"yarn dev-server\" \"yarn expose\"",
    "dev-server": "ts-node-dev --watch ./.env ./src/app.ts",
    "expose": "mapps tunnel:create -p 8080",
    "start": "yarn server",
    "server": "nodemon ./src/app.ts",
    "stop": "kill-port 8080",
    "test": "jest",
    "test-coverage": "jest --coverage"
  },
  "dependencies": {
    "@mondaycom/apps-sdk": "^2.2.0",
    "body-parser": "^1.20.2",
    "dotenv": "^5.0.1",
    "express": "^4.18.2",
    "hyperformula": "^2.6.1",
    "jsonwebtoken": "^8.5.1",
    "monday-sdk-js": "^0.5.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^8.5.9",
    "concurrently": "^5.3.0",
    "cross-port-killer": "^1.4.0",
    "debug": "~2.6.9",
    "jest": "^29.7.0",
    "mock-require": "^3.0.3",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}